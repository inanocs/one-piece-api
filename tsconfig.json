{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@*": ["*"]
    },
    "alwaysStrict": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
